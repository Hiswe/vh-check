-
  var items = [
    {name: `global`, url: `/`},
    {name: `common-js`, url: `/demo-commonjs.html`},
    {name: `es-module`, url: `/demo-es-module.html`},
    {name: `redefine-vh`, url: `/demo-redefine-vh.html`},
  ]

mixin menu( activeIndex, redefineVh )
  - var wrapperClassName = `menu menu--${redefineVh ? `redefine-vh` : `100-vh-gap`}`
  ul(class=wrapperClassName)
    each item, index  in items
      - var isActive = activeIndex === index
      - var className = `menu__item${ isActive ? ` menu__item--active` : `` }`
      li(class=className):  a(href=`${root}${item.url}`)= item.name
